# ============================================================================ #
#
# A `options.flocoPackages.packages' collection, represented as a list of
# Node.js package/module submodules.
#
# ---------------------------------------------------------------------------- #

{ lib, ... }: let
  nt = lib.types;
in {

# ---------------------------------------------------------------------------- #

  options.flocoPackages = lib.mkOption {
    type = nt.submodule {
      options.packages = lib.mkOption {
        type = nt.listOf ( nt.submodule ../pdef );
      };
    };
  };  # End `options'


# ---------------------------------------------------------------------------- #

}


