# Arguments used to fetch a source tree or file.
#
# ---------------------------------------------------------------------------- #

{ lib, config, pure, ... }: {

  config.tarball = lib.mkIf ( ! pure ) ( { config, ... }: {
    config.narHash = lib.mkDefault ( builtins.fetchTree {
      type = "tarball";
      inherit (config) url;
    } ).narHash;
  } );

}


