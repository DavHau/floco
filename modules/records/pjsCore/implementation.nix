in {

  _file = "<floco>/records/pjsCore/implementation.nix";

  config.pjsCore = lib.mkDefault ( { config, ... }: {
    options.bin = lib.mkPjsBinOption // {
      type = nt.coercedTo nt.str
                          ( p: { ${baseNameOf config.ident} = p; } )
                          lib.libfloco.binPairs;
    };
  } );

}

