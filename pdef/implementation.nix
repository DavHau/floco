# ============================================================================ #
#
# A `options.flocoPackages.packages' submodule representing the definition of
# a single Node.js pacakage.
#
# ---------------------------------------------------------------------------- #

{ lib, pkgs, options, config, ... }: let
  nt  = lib.types;
in {

# ---------------------------------------------------------------------------- #

  options.flocoPackages = lib.mkOption {
    type = nt.submodule {
      options.packages = lib.mkOption {
        type = nt.listOf ( nt.submodule ./interface.nix );
      };
    };
  };


# ---------------------------------------------------------------------------- #

  config = {

# ---------------------------------------------------------------------------- #
    # Example
    flocoPackages.packages = [{
      ident   = "lodash";
      version = "4.17.21";
      ltype   = "file";
    }];

# ---------------------------------------------------------------------------- #

  };  # End `config'


# ---------------------------------------------------------------------------- #

}


