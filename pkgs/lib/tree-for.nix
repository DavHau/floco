{ lib
, system
, treeFor
, bash
, src
}: let

# ---------------------------------------------------------------------------- #

  drv = derivation {
    name = "tree-for.json";
    inherit system src;
    builder = "${bash}/bin/bash";
    PATH    = "${treeFor}/bin";
    args    = ["-eu" "-o" "pipefail" "-c" ''
      treeFor "$src" > "$out";
    ''];
    preferLocalBuild = true;
    allowSubstitutes = ( builtins.currentSystem or "unknown" ) != system;
  };


# ---------------------------------------------------------------------------- #

in lib.importJSON drv.outPath


