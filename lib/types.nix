{ lib }: let

# ---------------------------------------------------------------------------- #

  nt = lib.types;

# ---------------------------------------------------------------------------- #

  jsonAtom = nt.nullOr ( nt.oneOf [nt.str nt.bool nt.int nt.float] );

  jsonValue = ( nt.oneOf [
    jsonAtom
    ( nt.listOf jsonValue )
    ( nt.attrsOf jsonValue )
  ] ) // {
    description = "A JSON compliant value";
  };


# ---------------------------------------------------------------------------- #

in {

  inherit
    jsonAtom
    jsonValue
  ;

}

